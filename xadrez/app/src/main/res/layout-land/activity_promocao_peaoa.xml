<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.isec.tiagodaniel.xadrez.Activities.ActivityPromocaoPeao"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="@string/promover_peao_titilo"
        android:textSize="@dimen/activity_promocao_peao_text_view"
        android:typeface="monospace"
        android:textStyle="bold"
        android:fontFamily="@font/fonty"
        android:textColor="@color/title"
        android:textAlignment="center"
        android:layout_gravity="top|center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rainha"
                android:padding="15dp"
                android:layout_margin="5dp"
                android:onClick="onRainha"
                android:fontFamily="@font/fonty"
                android:background="@drawable/rounded_button"
                android:drawableStart="@drawable/b_rainha"
                android:drawableEnd="@drawable/p_rainha"
                android:textColor="@color/title"
                android:textSize="@dimen/activity_promocao_peao_button"
                android:textStyle="bold"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/bispo"
                android:padding="15dp"
                android:layout_margin="5dp"
                android:onClick="onBispo"
                android:fontFamily="@font/fonty"
                android:background="@drawable/rounded_button"
                android:drawableStart="@drawable/b_bispo"
                android:drawableEnd="@drawable/p_bispo"
                android:textColor="@color/title"
                android:textSize="@dimen/activity_promocao_peao_button"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/torre"
                android:padding="15dp"
                android:layout_margin="5dp"
                android:onClick="onTorre"
                android:fontFamily="@font/fonty"
                android:background="@drawable/rounded_button"
                android:drawableStart="@drawable/b_torre"
                android:drawableEnd="@drawable/p_torre"
                android:textColor="@color/title"
                android:textSize="@dimen/activity_promocao_peao_button"
                android:textStyle="bold"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cavalo"
                android:padding="15dp"
                android:layout_margin="5dp"
                android:onClick="onCavalo"
                android:fontFamily="@font/fonty"
                android:background="@drawable/rounded_button"
                android:drawableStart="@drawable/b_cavalo"
                android:drawableEnd="@drawable/p_cavalo"
                android:textColor="@color/title"
                android:textSize="@dimen/activity_promocao_peao_button"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>