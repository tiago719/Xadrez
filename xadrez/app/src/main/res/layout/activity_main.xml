<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.isec.tiagodaniel.xadrez.MainActivity"
    android:padding="40dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xadrez"
        android:textSize="36sp"
        android:typeface="monospace"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="top|center"
        android:padding="20dp"
        android:layout_margin="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/botao1MP"
            android:padding="20dp"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:onClick="onJogarContraPC"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/botao2MP"
            android:padding="20dp"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:onClick="onModo2Jogadores"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/botao3MP"
            android:padding="20dp"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:onClick="onCriarJogoOnline"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/botao4MP"
            android:padding="20dp"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:onClick="onJuntarJogoOnline"
            />
    </LinearLayout>

</FrameLayout>
